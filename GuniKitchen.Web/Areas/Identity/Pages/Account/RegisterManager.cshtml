@page
@using GuniKitchen.Web.Models.Enums
@model RegisterManagerModel
@{
    ViewData["Title"] = "Register Manager";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="Input.DisplayName"></label>
                <input asp-for="Input.DisplayName" class="form-control" />
                <span asp-validation-for="Input.DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.DateOfBirth"></label>
                <input asp-for="Input.DateOfBirth" class="form-control" />
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Gender" class="control-label-required"></label>
                <br />
                <div class="btn-group btn-group-toggle" data-toggle="buttons">
                    <label class="btn btn-secondary">
                        <input asp-for="Input.Gender" type="radio" class="form-check-input"
                               id="Input.Gender.Male" name="Input.Gender"
                               value="@MyIdentityGenders.Male" />
                        Male
                    </label>
                    <label class="btn btn-secondary">
                        <input asp-for="Input.Gender" type="radio" class="form-check-input"
                               id="Input.Gender.Female" name="Input.Gender"
                               value="@MyIdentityGenders.Female" />
                        Female
                    </label>
                    <label class="btn btn-secondary">
                        <input asp-for="Input.Gender" type="radio" class="form-check-input"
                               id="Input.Gender.ThirdGender" name="Input.Gender"
                               value="@MyIdentityGenders.ThirdGender" />
                        Third Gender
                    </label>
                </div>
                <span asp-validation-for="Input.Gender" class="text-danger" style="display: block;"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register Manager</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
