@model IEnumerable<GuniKitchen.Web.Areas.Manage.ViewModels.UsersListViewModel>

@{
    ViewData["Title"] = "List of Users";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/RegisterManager">Register New Manager</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RolesOfUser)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @String.Join(", ", item.RolesOfUser)
            </td>
        </tr>
}
    </tbody>
</table>
